     console.log(texto);
   };
     function myFunction2(valor){
      document.getElementById("text-acerade").innerText=valor; 
     }

     function logMessage(message){
      console.log(message + "<br>");
     }

// controla si se presiono un enter
let textarea=document.getElementById("edit-acercade")
textarea.addEventListener("keyup", (e)=> {
   logMessage("key "${e.key}" released [event:keyup]");
   if (e.keyup=="Enter"){
      document.getElementById("edit-acerrcade").style.display="none"
   }
});
//carga contenido de un archivo de texto
//y lo muestra en el parrafo
function showFile(input){
 let file = input.files[0];
 alert(File name: ${file.name} ); //e.g. my.png
alert(last modified: ${file last.Modified}); //e.g 12315312313123

let reader = new FileReader(); 
reader.readAsText(file);
reader.onload =function() {
   console.log(reader.result);
   document.getElementById("text-acercade").innerText=reader.result;
};
reader.onerror = function() {
   console.log(reader.error);
};
}
